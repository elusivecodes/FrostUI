{
    "extends": "stylelint-config-twbs-bootstrap",
    "rules": {
        "declaration-no-important": null,
        "indentation": 4,
        "scss/at-function-named-arguments": null,
        "selector-max-universal": 2,
        "selector-no-qualifying-type": [
            true,
            {
                "ignore": [
                    "attribute"
                ]
            }
        ],
        "string-quotes": "double"
    }
}